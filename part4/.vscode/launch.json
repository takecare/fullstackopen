{
  // https://www.freecodecamp.org/news/heres-how-you-can-actually-use-node-environment-variables-8fdf98f53a0a/
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "part4 backend",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/part4/sandbox/backend/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/sandbox/backend/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "part4 backend (npm)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "program": "${workspaceFolder}/sandbox/backend/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/sandbox/backend/.env"
    }
  ]
}
