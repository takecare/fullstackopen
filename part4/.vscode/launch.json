{
  // https://www.freecodecamp.org/news/heres-how-you-can-actually-use-node-environment-variables-8fdf98f53a0a/
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "backend",
      "runtimeExecutable": "node",
      "program": "${workspaceFolder}/sandbox/backend/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/sandbox/backend/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "npm start [fixme]",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "program": "${workspaceFolder}/sandbox/backend/index.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/sandbox/backend/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "jest - all",
      "program": "${workspaceFolder}/sandbox/backend/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--config",
        "${workspaceFolder}/sandbox/backend/jest.config.js"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true
    }
  ]
}
